<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/homepage_logo">

    <!-- SETTINGS BUTTON (TOP RIGHT) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/settings_logo"
            android:contentDescription="Settings"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:padding="6dp" />
    </LinearLayout>

    <!-- SEARCH BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_searchbar_white"
            android:drawablePadding="10dp"
            android:hint="Search recipes..."
            android:padding="12dp"
            android:textColor="#333333"
            android:textColorHint="#777777" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:contentDescription="Search recipes"
            android:scaleType="fitCenter"
            android:src="@drawable/serchbar" />
    </LinearLayout>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- LEFT SIDE -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/FilterButton"
                android:layout_width="130dp"
                android:layout_height="58dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/rounded_imagebutton"
                android:clipToOutline="true"
                android:contentDescription="Filters"
                android:scaleType="centerCrop"
                android:src="@drawable/filters" />

            <TextView
                android:id="@+id/textSearchedRecipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searched Recipes\nwill be\nshown here...."
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="80dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- RIGHT SIDE BUTTONS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">

            <ImageButton
                android:id="@+id/recipeButton1"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/my_recipes_logo"
                android:clipToOutline="true"
                android:background="@drawable/rounded_imagebutton"
                android:layout_marginBottom="14dp"
                android:contentDescription="My recipes" />

            <ImageButton
                android:id="@+id/recipeButton2"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/create_recipe_logo"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_imagebutton"
                android:layout_marginBottom="14dp"
                android:contentDescription="Create recipes" />

            <ImageButton
                android:id="@+id/recipeButton3"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_imagebutton"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@drawable/ai_features_logo"
                android:layout_marginBottom="14dp"
                android:contentDescription="AI Features" />

            <ImageButton
                android:id="@+id/recipeButton4"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_imagebutton"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@drawable/favrecipes"
                android:contentDescription="Favorite recipes" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



