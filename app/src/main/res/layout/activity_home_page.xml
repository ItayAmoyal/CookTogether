<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/homepage_logo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/settings_logo"
            android:contentDescription="הגדרות"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:padding="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/recipeButton2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/rounded_imagebutton"
                android:clipToOutline="true"
                android:contentDescription="יצירת מתכונים"
                android:scaleType="centerCrop"
                android:src="@drawable/create_recipe_logo" />

            <ImageButton
                android:id="@+id/recipeButton3"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/rounded_imagebutton"
                android:clipToOutline="true"
                android:contentDescription="יכולות AI"
                android:scaleType="centerCrop"
                android:src="@drawable/ai_features_logo" />

            <ImageButton
                android:id="@+id/recipeButton4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_imagebutton"
                android:clipToOutline="true"
                android:contentDescription="מתכונים מועדפים"
                android:scaleType="centerCrop"
                android:src="@drawable/favrecipes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_searchbar_white"
            android:drawablePadding="10dp"
            android:hint="חיפוש מתכונים..."
            android:padding="12dp"
            android:textColor="#333333"
            android:textColorHint="#777777"
            android:textAlignment="viewStart"
            android:gravity="start|center_vertical" />

        <ImageButton
            android:id="@+id/FilterButton"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="2sp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="סינון מתכונים"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filters" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />
</LinearLayout>




