<?xml version="1.0" encoding="utf-8"?>
    <!-- TOP SCROLL (TITLE + IMAGE + INFO + INGREDIENTS TITLE) -->
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Title"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageRecipe"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/diffucalty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_imagebutton"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/diffeasy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RATING:"
                    android:textColor="#000"
                    android:textSize="28sp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/rRecipeating1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/Reciperating2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/Reciperating3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/Reciperating4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/Reciperating5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="20dp"/>

    <!-- INGREDIENTS LISTVIEW FIXED HEIGHT -->

    <!-- INSTRUCTIONS SCROLL -->


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textStyle="bold"
                android:textSize="22sp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATE:"
                android:textColor="#000"
                android:textSize="28sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:gravity="center"/>
                <ImageButton
                        android:id="@+id/rating1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/emptystar"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"/>
                <ImageButton
                    android:id="@+id/rating2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageButton
                    android:id="@+id/rating3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageButton
                    android:id="@+id/rating4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
                <ImageButton
                    android:id="@+id/rating5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/emptystar"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <Button
                android:id="@+id/submitRatingButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="SUBMIT" />

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_comment_edittext"
                android:hint="Write a comment..."
                android:gravity="top|start"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
               />
            <Button
                android:id="@+id/submitCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
               android:layout_gravity="end"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="SUBMIT" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Comments"
                android:textColor="#000"
                android:textSize="28sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/AllComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>


