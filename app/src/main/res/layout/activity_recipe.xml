<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:background="@drawable/orange_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- טקסט (ראשון – מימין) -->
            <TextView
                android:id="@+id/textRecipeMade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="נוצר על ידי איתי"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <!-- כפתור חזרה (שמאל) -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="חזרה אחורה"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_icon" />
        </LinearLayout>
        <TextView
            android:id="@+id/textRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="שם המתכון"
            android:textColor="#000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/difficulty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_imagebutton"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/diffeasy" />

            <TextView
                android:id="@+id/cooktime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:text="זמן הכנה:"
                android:clipToOutline="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דירוג:"
                android:textColor="#000"
                android:textSize="28sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:gravity="start"
                android:textAlignment="viewStart"/>

            <ImageView
                android:id="@+id/Recipeating1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/Reciperating2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/Reciperating3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/Reciperating4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/Reciperating5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מצרכים"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:textAlignment="viewStart"/>

        <com.example.cooktogether.WrapContentRecyclerView
            android:id="@+id/rvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הוראות הכנה"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="start"
            android:textAlignment="viewStart"/>

        <com.example.cooktogether.WrapContentRecyclerView
            android:id="@+id/rvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דרג:"
                android:textColor="#000"
                android:textSize="28sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:gravity="start"
                android:textAlignment="viewStart"/>

            <ImageButton
                android:id="@+id/rating1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/rating2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/rating3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/rating4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/rating5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/emptystar"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <Button
            android:id="@+id/submitRatingButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="שלח דירוג"
            android:gravity="center"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_comment_edittext"
            android:hint="כתוב תגובה..."
            android:gravity="start|top"
            android:textAlignment="viewStart"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:overScrollMode="always" />

        <Button
            android:id="@+id/submitCommentButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="שלח תגובה"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כל התגובות"
            android:textColor="#000"
            android:textSize="28sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="viewStart"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AllComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <Button
            android:id="@+id/btnAddToFavorites"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="הוסף למועדפים"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/bg_favorite_button"
            android:elevation="6dp"
            android:letterSpacing="0.05" />


    </LinearLayout>
</ScrollView>
