<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F6F7FB">

    <!-- Chat bubble -->
    <LinearLayout
        android:id="@+id/chatBubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_ai_chat_card"
        android:elevation="3dp">

        <TextView
            android:id="@+id/tvChatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#6B7280"/>

        <TextView
            android:id="@+id/tvChatMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="This is my estimation"
            android:textSize="16sp"
            android:textColor="#111827"/>
    </LinearLayout>

    <!-- Result TextView -->
    <TextView
        android:id="@+id/tvEstimationResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Calories:\nProtein:\nCarbs:\nFat:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:lineSpacingExtra="8dp"
        android:background="@drawable/bg_estimation_result"/>

</LinearLayout>
