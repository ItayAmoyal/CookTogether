<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Blue gradient -->
    <gradient
        android:startColor="#A3D8FF"
        android:centerColor="#C4E7FF"
        android:endColor="#E6F5FF"
        android:angle="90" />

    <!-- Padding inside the box -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

    <!-- Subtle white border -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF" />

</shape>
