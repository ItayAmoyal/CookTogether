<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="14dp" />

    <!-- Smooth colorful gradient -->
    <gradient
        android:startColor="#FF9A9E"
        android:centerColor="#FECFEF"
        android:endColor="#FAD0C4"
        android:angle="45" />

    <!-- Internal padding so the content does not touch edges -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

    <!-- Optional subtle border -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF" />

</shape>

